<div class="container d-flex justify-content-center">
  <div class="container text-center">
    <h1>Welcome <%= current_user.first_name %> <%= current_user.last_name %>.</h1><br>
    <p>Account Number: <%= current_user.unique_account[0] %></p>
    <%= link_to "Update Transactions", fetch_expenses_path%>
  </div>
</div><br>

<div data-controller="update-list">
  <div class="d-flex justify-content-center align-item-center">
    <div class="d-inline-flex justify-content-between w-50">
      <%= link_to "30 Days", dashboard_path(scope: 1) %>
      <%= link_to "3 Months", dashboard_path(scope: 3) %>
      <%= link_to "6 Months", dashboard_path(scope: 6) %>
    </div>
  </div>

  <div class="container">
    <div class="chart">
      <%= pie_chart @emmission_chart, donut: true, legend: "left" %>
      <%= pie_chart @expenses_chart, donut: true, legend: "right" %>
    </div>
    <br>
       <%= render 'description', time: @time %>
  </div>
</div>

<%= csrf_meta_tag %>
