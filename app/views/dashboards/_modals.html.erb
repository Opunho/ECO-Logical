<div class=" modal fade" id="Modal-<%= cat.split.first %>" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="  modal-dialog" role="document">
    <div class=" modal13 modal-content">
      <div class="modal-header">
        <strong>
          <h4><%= "Breakdown of #{cat}" %></h4>
        </strong>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @emmissions.where(sub_category: cat).each do |emmission| %>
        <h5><em><%= emmission.expense.creditor_name %></em></h5>
        <p><i class="fas fa-money-bill-wave"></i> <%= emmission.expense.amount %> EUR</p>
        <% calc_result =  (emmission.co2_grams.to_f * emmission.expense.amount.to_f) / 1000 %>
        <p>Expense Emission:</p>
        <p><i class="fas fa-fire"></i> <%= calc_result.ceil(2) %></p>
        <p><i class="fas fa-calendar-alt"></i> <%= emmission.expense.date %></p>
        <p>-----------------------</p>

        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class=" btn-dash" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
