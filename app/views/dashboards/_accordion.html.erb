<div>
  <div class="" id="headingOne">
    <h2 class="mb-0">
      <button type="button" class="btn btn-link btn-block text-left" data-toggle="modal" data-target="#Modal-<%= cat.split.first %>">
          <h2><strong><%= cat %></strong></h2>
      </button>
    </h2>
      <div class="d-flex dprop">
        <div class="greendash1money">
          <i class="fas fa-money-bill-wave"></i>
          <p><%= current_user.total_expenses_per_category([cat, time]).ceil(2) %> EUR</p>
        </div>
           <div class="greendash1" data-update-list-target="card<%= @counter %>" data-action="click->update-list#flip">
          <% final_calc = (current_user.total_emmissions_per_category(cat).to_f * current_user.total_expenses_per_category([cat, time]).to_f)/1000 %>
          <i class="fas fa-burn"></i>
          <% if final_calc > 1000 %>
            <% final_calc /= 1000 %>
            <div class="d-flex">
              <p><%= final_calc.ceil(2) %>  </p>
              <p class="card-info">Tco2</p>
            </div>
          <% else %>
          <div class="d-flex">
            <p class="whole"><%= final_calc.ceil(2) %></p>
            <p class="card-info"> CO2 Kg</p>
          </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
