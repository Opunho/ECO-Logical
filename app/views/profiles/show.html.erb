<div>
  <span class="typed d-flex justify-content-center " id="banner-typed-text"></span>
</div>
<br><br>
<h1 class="your-pledges d-flex justify-content-center position-">Your pledges</h1>
<div class="container-all-pledges">
    <div class="card-container">
        <% @pledges.first(3).each do |pledge| %>
            <% if pledge.completed == false %>
            <h1><%= pledge.recommendation.title %></h1>
            <%# <%= pledge.recommendation.description %>
            <p><%= pledge.recommendation.link_to_article %></p>
            <p><%= pledge.recommendation.co2_grams %> CO2 kg </p>
            <% unless pledge.completed %>
            <%= link_to "complete", complete_pledge_path(pledge), method: :patch %>
            <% end %>
            <% end %>
        <% end %>
    </div>
</div>
<h1 class="comp-pledges d-flex justify-content-center">Completed pledges</h1>
<p class="total-co2 d-flex justify-content-center">You've helped reduce <%= @total_co2_achieved %> kg of CO2!</p>
<div class="container-all-pledges">
  <div class="card-container">
    <% @completed_pledges.first(3).each do |pledge| %>
        <% pledge.completed %>
        <%= pledge.recommendation.title %>
        <%= pledge.recommendation.description %>
        <%= pledge.recommendation.link_to_article %>
        <%= pledge.recommendation.co2_grams %> CO2 kg
        <% unless pledge.completed %>
        <%= link_to "complete", complete_pledge_path(pledge), method: :patch %>
      <% end %>
    <% end %>
   </div>
</div>
