<% content_for :meta_title, "Eco-Logical | Recommendations, let us help you" %>
<% content_for :meta_description, "Find out how you can change your current behavior in order to achieve your ecological ambitions." %>
<% content_for :meta_image, image_path("cover.png") %>


<div class="accordion-container">
  <h5 class="offset-recommendations-show"><%= "How to offset: #{@recommendation.category}" %></h5>
  <div style="background-image: url(<%= @recommendation.photo %>);" class="swipe-image"></div>
  <%= render "accordion_recommendations", recommendation: @recommendation %>
  <div class = "swipe-btn-show-container">
    <%= link_to "Back to Actions", recommendations_path, class:"button-know-more" %>
    <%= simple_form_for([@recommendation, Pledge.new]) do |f| %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
