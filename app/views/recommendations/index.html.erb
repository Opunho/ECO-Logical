<h3 class="offset-recommendations">Offset Actions</h3>
  <div id="mySwipe" class="swipe">
    <div class="swipe-wrap">
    <!--first card-->
    <% @recommendations.each do |recommendation| %>
      <div class="swipe-container">
       <h5><%= recommendation.category %></h5>
        <div style="background-image: url(<%= recommendation.photo %>);" class="swipe-image"></div>
         <div>
           <div class="swipe-btn-container">
             <p><strong><%= recommendation.title %></strong></p>
             <div class="swipe-btn-container">
              <p>Offset: </p>
              <p class="counterUp" akhi=<%= recommendation.co2_grams %>>0</p>
              <p> CO2 grams</p>
             </div>
           </div>
            <div class="swipe-btn-container">
              <%= link_to "More Info", recommendation_path(recommendation.id), class:"button-know-more" %>
              <%= simple_form_for([recommendation, Pledge.new]) do |f| %>
                <%= f.submit %>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
    </div> <!--end of swipe-wrap-->
  </div> <!--end of div-->

<div class="go-to-pledges-container">
  <div class="go-to-pledges"><%= link_to "Go to pledges  ", pledges_path %><i class="fab fa-google-play"></i></div>
</div>
