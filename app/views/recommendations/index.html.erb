<h3 class="offset-recommendations">Offset Actions</h3>

<div id="mySwipe" class="swipe">
  <div class="swipe-wrap"> <!--start of swipe-wrap-->
    <% @recommendations.each do |recommendation| %>
      <div class="swipe-container">
        <div></div>
          <div style="background-image: url(<%= recommendation.photo %>);" class="swipe-image">
          <h5><%= recommendation.category %></h5>
            <div>
              <div class="swipe-btn-container">
                <p><strong><%= recommendation.title %></strong></p>
                <div class="swipe-btn-container">
                <p>Offset: </p>
                <p class="counterUp" akhi=<%= recommendation.co2_grams/1000 %>>0</p>
                <p> CO2 KGs</p>
                </div>
              </div>
              <div class="swipe-btn-container">
                <%= link_to "More Info", recommendation_path(recommendation.id), class:"button-know-more" %>
                <%= simple_form_for([recommendation, Pledge.new]) do |f| %>
                  <%= f.submit %>
                <% end %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div> <!--end of swipe-wrap-->
</div> <!--end of div-->
